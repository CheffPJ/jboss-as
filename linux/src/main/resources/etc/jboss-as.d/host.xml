<?xml version='1.0' encoding='UTF-8'?>

<host name="master" xmlns="urn:jboss:domain:1.0">
    <management>
        <security-realms>
            <security-realm name="PropertiesMgmtSecurityRealm">
                <authentication>
                    <properties path="mgmt-users.properties" relative-to="jboss.domain.config.dir"/>
                </authentication>
            </security-realm>
        </security-realms>
        <management-interfaces>
            <native-interface interface="global" port="9999"/>
            <http-interface interface="global" port="9990"/>
        </management-interfaces>
    </management>
    <domain-controller>
        <local/>
    </domain-controller>
    <interfaces>
        <interface name="global">
            <any-address/>
        </interface>
    </interfaces>
    <jvms>
        <jvm name="default">
            <heap size="64m" max-size="128m"/>
        </jvm>
    </jvms>
    <servers>
        <server name="as-1" group="group-a" auto-start="true">
            <socket-binding-group ref="ha-sockets" port-offset="200"/>
        </server>
        <server name="as-2" group="group-a" auto-start="true">
            <socket-binding-group ref="ha-sockets" port-offset="200"/>
        </server>
    </servers>
</host>